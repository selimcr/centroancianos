{% extends 'TecnotekAsiloBundle:Admin:layouts/admin_layout.html.twig' %}

{% block js %}
    <script src="{{ asset('admin/js/tecnotek/tecnotek_instrument.js') }}"></script>

    <script type="text/javascript">
        Tecnotek.module = "instrument-list";
        Tecnotek.UI.translates["edit-instrument"] = "{{ 'edit.instrument'|trans }}";
        Tecnotek.UI.translates['field.not.empty'] = "{{ 'validation.not.empty'|trans }}";
        Tecnotek.UI.translates['confirm-delete'] = "{{ 'confirm.instrument.delete'|trans }}";
        Tecnotek.UI.urls['save-instrument'] = "{{ path('_instrument_save') }}";
        Tecnotek.UI.urls['delete-instrument'] = "{{ path('_instrument_delete') }}";
    </script>
{% endblock js %}

{% block mainContent %}
    <!--overview start-->
    <div class="row">
        <div class="col-lg-12">
            <h3 class="page-header"><i class="fa fa-table"></i> {{ 'instrument'|trans }}</h3>
            <ol class="breadcrumb">
                <li><i class="fa fa-home"></i><a href="{{ path('_admin_home') }}">{{ 'home'|trans }}</a></li>
                <li><i class="fa fa-table"></i>{{ 'instrument'|trans }}</li>
            </ol>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8 col-md-12">
            <div class="panel panel-default panel panel-primary">
                <!-- Default panel contents -->
                <div class="panel-heading">{{ 'instrument'|trans }}</div>
                <!-- Table -->
                <div id="custom-toolbar">
                    <div class="form-inline" role="form">
                        <button type="button" id="btn-new" class="btn btn-default" ref="0"
                                title="{{ 'create.instrument'|trans }}">{{ 'new'|trans }}</button>
                    </div>
                </div>

                <table id="instrument-list" class="table table-striped table-bordered table-hover"
                       data-toolbar="#custom-toolbar"
                       data-toggle="table"
                       data-url="{{ path('_instrument_paginated_list') }}"
                       data-side-pagination="server"
                       data-height="400"
                       data-card-view="false"
                       data-show-refresh="true" data-show-toggle="true" data-show-columns="true"
                       data-search="true" data-select-item-name="toolbar1"
                       data-pagination="true"
                       data-page-list="[10, 25, 50, 100]"
                       data-sort-name="name"
                       data-sort-order="asc">
                    <thead>
                    <tr>
                        <th data-field="name" data-sortable="true" class="col-md-6">
                            <i class="glyphicon glyphicon-star"></i>
                            {{ 'name'|trans }}
                        </th>
                        <th data-field="operate" data-card-visible="false" data-searchable="false"
                            data-formatter="Tecnotek.Instrument.List.operateFormatter"
                            data-events="Tecnotek.Instrument.List.operateEvents">{{ 'actions'|trans }}</th>
                    </tr>
                    </thead>
                </table>
            </div>
        </div>
        <!--/col-->

        <div class="col-md-4">
            <div class="row">
                <div class="col-lg-12">
                    <div id="panel-instrument" class="panel panel-default hidden">
                        <div class="panel-heading">
                            <div id="panel-instrument-title" class="pull-left">{{ 'create.instrument'|trans }}</div>
                            <div class="clearfix"></div>
                        </div>
                        <div class="panel-body">
                            <div class="padd">
                                <div class="form quick-post">
                                    <form class="form-horizontal" id="form-instrument">
                                        <!-- Name -->
                                        <div class="form-group">
                                            <label class="control-label col-lg-4" for="name">{{ 'name'|trans }} *</label>

                                            <div class="col-lg-8">
                                                <input type="text" class="form-control" id="name" name="name" required="required"
                                                       maxlength="250">
                                            </div>
                                        </div>

                                        <!-- Buttons -->
                                        <div class="form-group">
                                            <!-- Buttons -->
                                            <div class="col-lg-offset-2 col-lg-9">
                                                <button type="submit"
                                                        class="btn btn-primary">{{ 'save'|trans }}</button>
                                                <button id="btn-cancel" type="reset"
                                                        class="btn btn-default">{{ 'cancel'|trans }}</button>
                                            </div>
                                        </div>
                                    </form>
                                </div>


                            </div>
                            <div class="widget-foot">
                                <!-- Footer goes here -->
                            </div>
                        </div>
                    </div>

                </div>
            </div>

        </div>
    </div>


{% endblock mainContent %}